// uniforms
[[vk::binding(0)]] Texture2D    texData;
[[vk::binding(0)]] SamplerState texSampler;

// methods
void main(in  float2 vTexcoords : TEXCOORD0,
          out float4 outColor   : SV_Target0) {

  outColor = texData.Sample(texSampler, vTexcoords);
}
